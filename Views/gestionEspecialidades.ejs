<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Especialidades</title>
    <script src="/main.js"></script>
</head>
<body>
  <h3><%= gEspecialidades %></h3>
    <header class="header2">
        <button class="button" onclick="mostrar_formEspecialidad()">
            Agregar Especialidad
        </button>
        <div class="buscar">
            <label for="dato">Buscar</label>
            <input type="text" id="dato" />
            <button class="button" onclick="buscar_especialidad()">Buscar</button>
        </div>
    </header>
    <button class="volverAtras" onclick="volverAtras()">Volver Atras</button>

    <div id="container">
        <div id="tabla_especialidades">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Operaciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% listaEspecialidades.forEach(function(especialidad) { %>
                        <tr>
                            <td><%= especialidad.id %></td>
                            <td><%= especialidad.nombre %></td>
                            <td><%= especialidad.descripcion %></td>
                            <td>
                                <button class="editar" onclick="javascript:formEditEspecialidad('<%= especialidad.id %>');">Editar</button>
                                <button class="eliminar" onclick="javascript:eliminarEspecialidad('<%= especialidad.id %>');">Eliminar</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
