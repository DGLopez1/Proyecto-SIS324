<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/main.js"></script>
</head>
<body>
    <h3><%= gMedicos %><h3/>
    <header class="header2">
        <button class="button" onclick="mostrar_formUsuario()">
          Agregar Medico
        </button>
        <div class="buscar">
          <label for="dato">Buscar</label>
          <input type="text" id="dato" />
          <button class="button" onclick="buscar_usuario()">Buscar</button>
        </div>
      </header>
<button class="volverAtras"  onclick="volverAtras()">Volver Atras</button>
      <div id="container">

        <div id="tabla_usuarios">
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Fotografia</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Operaciones</th>
              </tr>
            </thead>
            <tbody>
              <% listaMedicos.forEach(function(medico) { %>
                <tr>
                  <td><%= medico.id %></td>
                  <td><img src="/images/<%= medico.foto %>" alt=""></td>
                  <td><%= medico.nombre %></td>
                  <td><%= medico.apellido %></td>
                  <td><%= medico.telefono %></td>
                  <td><%= medico.email %></td>
                  <td>
                    <button data-action="editar" onclick="formEditMedico('<%= medico.id %>');">Editar</button>
                    <button data-action="eliminar" onclick="controlMedico.eliminar_medico('<%= medico.id %>'); armar_tabla_medicos(lista_medicos)">Eliminar</button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        
      </div>
</body>
</html>