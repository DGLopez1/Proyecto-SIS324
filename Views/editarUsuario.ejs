<link rel="stylesheet" href="/Utils/controllers.css">
<div class="registro-container">
    <h2>EDITAR USUARIO</h2>
    <form id="formulario" action="/editarUsuario/<%= usuario.id %>" method="post">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" value="<%= usuario.nombre %>" name="nombre" required />

        <label for="apellido">Apellido:</label>
        <input type="text" id="apellido" value="<%= usuario.apellido %>" name="apellido" required />

        <label for="cuenta">Cuenta:</label>
        <input type="text" id="cuenta" value="<%= usuario.cuenta %>" name="cuenta" required />

        <label for="email">Email:</label>
        <input type="email" id="email" value="<%= usuario.email %>" name="email" required />

        <label for="password">Contrase√±a:</label>
        <input type="password" id="password" value="<%= usuario.password %>" name="password" required />

        <label for="rol">Rol:</label>
        <select id="rol" name="rol" required>
            <option value="<%= usuario.rol %>">Admin</option>
            <option value="usuario">Usuario</option>
        </select>

        <button type="submit">Actualizar</button>

    </form>
</div>